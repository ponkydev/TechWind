<%- include('head.ejs') %>
<body>
    <h1>Edit Post <span id="post-index"><%= index %></span></h1>
    <form action="/edit-post/<%= index %>" method="post">
        <label for="new-title">New title</label>
        <input type="text" name="new-title" value="<%= title %>">
        <label for="new-content">New content</label>
        <input type="text" name="new-content" value="<%= content %>">
        <input type="submit" name="submit-btn" value="Edit Post">
    </form>
</body>
</html>